# --- Aplicación Core API ---
NODE_ENV=development
PORT=3000

# --- Base de datos PostgreSQL ---
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=salomon

# --- Autenticación ---
JWT_SECRET=super-secret-jwt-demo
JWT_EXPIRES_IN=24h
INTERNAL_API_KEY=salomon-internal-demo

# --- Kafka & Qdrant ---
KAFKA_BROKER=kafka:9092
KAFKA_CLIENT_ID=salomon-api
QDRANT_URL=http://qdrant:6333

# --- Belvo (modo mock por defecto) ---
BELVO_USE_MOCKS=true
BELVO_ENVIRONMENT=sandbox
BELVO_SECRET_ID=
BELVO_SECRET_PASSWORD=

# --- Frontend permitido ---
FRONTEND_URL=http://localhost:3001

# --- Usuario demo para seed ---
DEMO_USER_EMAIL=demo@salomon.ai
DEMO_USER_PASSWORD=Demo1234!
