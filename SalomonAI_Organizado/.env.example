# Copia este archivo a `.env.local` y completa los valores con credenciales reales.
# Nunca subas archivos `.env*` generados a Git, usa el script `secrets/bootstrap-local-env.sh`
# para crear copias locales ignoradas.

# === Database Configuration ===
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=salomon_db
POSTGRES_USER=salomon_user
POSTGRES_PASSWORD=cambia_esta_contraseña

# === API / Runtime Configuration ===
NODE_ENV=development
API_PORT=3000

# === Security Secrets ===
JWT_SECRET=genera_un_secreto_largo_y_seguro_aqui
JWT_EXPIRES_IN=24h
INTERNAL_API_KEY=genera_otra_clave_segura_para_apis_internas
API_KEY_SECRET=genera_una_api_key_para_clientes

# === CORS configuration ===
# Define los orígenes permitidos separados por coma (incluye dominios del demo/staging)
CORS_ORIGIN=http://localhost:3001

# === Qdrant Vector Database ===
QDRANT_URL=http://qdrant:6333
QDRANT_HOST=qdrant
QDRANT_PORT=6333
QDRANT_COLLECTION_NAME=financial_transactions

# === Kafka Configuration ===
KAFKA_BROKER=kafka:9092
KAFKA_BROKERS=kafka:9092
KAFKA_TOPIC=documents.pending_processing
KAFKA_CLIENT_ID=salomon-ai
KAFKA_GROUP_ID=salomon-ai-group
KAFKAJS_NO_PARTITIONER_WARNING=1

# === Internal Service URLs (service-to-service communication inside Docker) ===
CORE_API_URL=http://core-api:3000
NLP_ENGINE_URL=http://nlp-engine:8000
FINANCIAL_CONNECTOR_URL=http://financial-connector:8000
RECOMMENDATION_ENGINE_URL=http://recommendation-engine:8000
RISK_ENGINE_URL=http://risk-engine:8000
TAX_ENGINE_URL=http://tax-engine:8000

# === Cache Configuration ===
REDIS_HOST=redis
REDIS_PORT=6379
CACHE_TTL=3600

# === NLP Configuration ===
NLP_MODEL_PATH=/models
NLP_LANGUAGE=es
NLP_CONFIDENCE_THRESHOLD=0.7

# === File Upload Configuration ===
UPLOAD_PATH=/uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=pdf,csv,xlsx

# === Monitoring ===
LOG_LEVEL=info
METRICS_ENABLED=true
HEALTH_CHECK_INTERVAL=30000

# === Social Login Providers (Opcional, para desarrollo) ===
GOOGLE_CLIENT_ID=
APPLE_CLIENT_ID=
APPLE_TEAM_ID=
