FROM python:3.11-slim

WORKDIR /app

RUN apt-get update && apt-get install -y build-essential gfortran libatlas-base-dev libgomp1 libpq-dev && rm -rf /var/lib/apt/lists/*

COPY requirements.txt ./
RUN pip install --no-cache-dir -r requirements.txt

COPY app ./app

ENV PORT=8003

CMD ["sh", "-c", "uvicorn app.main:app --host 0.0.0.0 --port ${PORT:-8003}"]
