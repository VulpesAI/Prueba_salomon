{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "../",
  "testMatch": ["<rootDir>/test/**/*.e2e-spec.ts"],
  "setupFiles": ["<rootDir>/test/setup-env.ts"],
  "transform": {
    "^.+\\.(t|j)s$": [
      "ts-jest",
      {
        "tsconfig": "<rootDir>/tsconfig.json"
      }
    ]
  },
  "testEnvironment": "node",
  "moduleNameMapper": {
    "^src/(.*)$": "<rootDir>/src/$1"
  }
}
